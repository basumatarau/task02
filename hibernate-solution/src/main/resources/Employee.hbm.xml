<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="by.htp.basumatarau.hibernate.dao.beans.Employee" table="employees">

        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="employeeId" type="int" column="id_employee">
            <generator class="native"/>
        </id>

        <property name="firstName" column="first_name" type="string"/>
        <property name="lastName" column="last_name" type="string"/>

        <many-to-one name="currentAddress"
                     cascade="all"
                     lazy="false"
                     class="by.htp.basumatarau.hibernate.dao.beans.Address"
                     column="fid_address"/>

        <list name="positions" table="employee_register" cascade="all">
            <key column="fid_employee" not-null="true"/>
            <index column="id_register_entry"/>
            <many-to-many class="by.htp.basumatarau.hibernate.dao.beans.Position"
                          column="fid_job_position"
                          fetch="join"
                          lazy="false"/>
        </list>

        <list name="addresses" table="employee_register" cascade="all">
            <key column="fid_employee" not-null="true"/>
            <index column="id_register_entry"/>
            <many-to-many class="by.htp.basumatarau.hibernate.dao.beans.Address"
                          column="fid_address"
                          fetch="join"
                          lazy="false"/>
        </list>

        <list name="companies" table="employee_register" cascade="all">
            <key column="fid_employee" not-null="true"/>
            <index column="id_register_entry"/>
            <many-to-many class="by.htp.basumatarau.hibernate.dao.beans.Company"
                          column="fid_company"
                          fetch="join"
                          lazy="false"/>
        </list>

    </class>
</hibernate-mapping>