<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="by.htp.basumatarau.hibernate.dao.beans.Employee" table="employees">

		<meta attribute="class-description">
			This class contains the employee detail.
		</meta>
		<id name="employeeId" type="int" column="id_employee">
			<generator class="native" />
		</id>
		<property name="firstName" column="first_name" type="string" />
		<property name="lastName" column="last_name" type="string" />

		<many-to-one name="currentAddress" cascade="all"
					 class="by.htp.basumatarau.hibernate.dao.beans.Address" column="fid_address" />

		<list name="positions" table="employee_register" cascade="all">
			<key column="fid_employee" />
			<index column="id_register_entry" />
			<one-to-many class="by.htp.basumatarau.hibernate.dao.beans.Position" />
		</list>

		<!-- //TODO: map employees to addresses and companies through two join tables: address_book and employee_register ...how?-->
		<!-- many to many mapping: employee-address -->
		<!-- many to many mapping: employee-company -->

	</class>
</hibernate-mapping>