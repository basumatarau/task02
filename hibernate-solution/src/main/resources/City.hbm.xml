<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="by.htp.basumatarau.hibernate.dao.beans.City" table="cities">

		<meta attribute="class-description">
			This class contains the city detail.
		</meta>
		<id name="cityId" type="int" column="id_city">
			<generator class="native" />
		</id>
		<property name="city" column="city" type="string" />

		<many-to-one name="country" cascade="all"
			class="by.htp.basumatarau.hibernate.dao.beans.Country" column="fid_country" />

		<set name="addresses" cascade="all">
			<key column="fid_city" />
			<one-to-many class="by.htp.basumatarau.hibernate.dao.beans.Address" />
		</set>

	</class>
</hibernate-mapping>